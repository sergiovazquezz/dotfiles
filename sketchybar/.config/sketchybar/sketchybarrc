#!/bin/bash

source "$HOME/.config/sketchybar/colors.sh" # Loads all defined colors
source "$HOME/.config/sketchybar/icons.sh"  # Loads all defined icons

ITEM_DIR="$HOME/.config/sketchybar/items"     # Directory where the items are configured
PLUGIN_DIR="$HOME/.config/sketchybar/plugins" # Directory where all the plugin scripts are stored

FONT="IBM Plex Sans"

# Unload the macOS on screen indicator overlay for volume change
launchctl unload -F /System/Library/LaunchAgents/com.apple.OSDUIHelper.plist >/dev/null 2>&1 &

bar=(
    height=35
    color=$BAR_COLOR
    shadow=off
    position=top
    sticky=on
    padding_right=20
    padding_left=20
    blur_radius=30
    notch_width=0
)

sketchybar --bar "${bar[@]}"

# Setting up default values
defaults=(
    updates=when_shown
    padding_right=5
    padding_left=5
    icon.font="$FONT:Semibold:14.0"
    icon.color=$ICON_COLOR
    icon.padding_right=5
    icon.padding_left=5
    label.font="$FONT:Semibold:12.5"
    label.color=$LABEL_COLOR
    label.padding_right=5
    background.height=25
    background.corner_radius=6
)

sketchybar --default "${defaults[@]}"

# Left
source "$ITEM_DIR/aerospace.sh"

# Right
source "$ITEM_DIR/calendar.sh"

# Separator 1 (between calendar and system)
sketchybar --add item separator1 right \
    --set separator1 \
    padding_left=2 \
    padding_right=2 \
    background.drawing=off \
    icon.drawing=off

# System status items (middle group)
source "$ITEM_DIR/battery.sh"
source "$ITEM_DIR/wifi.sh"
source "$ITEM_DIR/dnd.sh"
source "$ITEM_DIR/volume.sh"

# Separator 2 (between system and performance)
sketchybar --add item separator2 right \
    --set separator2 \
    padding_left=2 \
    padding_right=2 \
    background.drawing=off \
    icon.drawing=off

# Performance items (leftmost visually, so add last)
source "$ITEM_DIR/ram.sh"
source "$ITEM_DIR/cpu.sh"

# Create brackets for visual grouping
sketchybar --add bracket calendar_box calendar \
    --set calendar_box background.color=$ITEM_BG_COLOR \
    background.drawing=on

sketchybar --add bracket system_box battery wifi dnd volume_icon \
    --set system_box background.color=$ITEM_BG_COLOR \
    background.drawing=on

sketchybar --add bracket performance_box ram cpu \
    --set performance_box background.color=$ITEM_BG_COLOR \
    background.drawing=on

# Forcing all item scripts to run (never do this outside of sketchybarrc)
sketchybar --update

echo "sketchybar configuation loaded.."
