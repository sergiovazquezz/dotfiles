#!/bin/bash

source "$HOME/.config/sketchybar/colors.sh" # Loads all defined colors
source "$HOME/.config/sketchybar/icons.sh"  # Loads all defined icons

ITEM_DIR="$HOME/.config/sketchybar/items"     # Directory where the items are configured
PLUGIN_DIR="$HOME/.config/sketchybar/plugins" # Directory where all the plugin scripts are stored

FONT="SF Pro" # Needs to have Regular, Bold, Semibold, Heavy and Black variants
PADDINGS=3    # All paddings use this value (icon, label, background)

# Unload the macOS on screen indicator overlay for volume change
launchctl unload -F /System/Library/LaunchAgents/com.apple.OSDUIHelper.plist >/dev/null 2>&1 &

# Setting up the general bar appearance of the bar
bar=(
    height=34
    color=$BAR_COLOR
    shadow=on
    position=top
    sticky=on
    padding_right=5
    padding_left=5
    # y_offset=-5
    margin=8
    # blur_radius=20
    notch_width=0
)

sketchybar --bar "${bar[@]}"

# Setting up default values
defaults=(
    updates=when_shown
    icon.font="$FONT:Bold:14.0"
    icon.color=$ICON_COLOR
    icon.padding_left=$PADDINGS
    icon.padding_right=$PADDINGS
    label.font="$FONT:Semibold:13.0"
    label.color=$LABEL_COLOR
    label.padding_left=$PADDINGS
    label.padding_right=$PADDINGS
    padding_right=$PADDINGS
    padding_left=$PADDINGS
    background.height=29
    background.corner_radius=8
    popup.background.border_width=1
    popup.background.corner_radius=8
    popup.background.border_color=$POPUP_BORDER_COLOR
    popup.background.color=$POPUP_BACKGROUND_COLOR
    popup.blur_radius=20
    popup.background.shadow.drawing=on
)

sketchybar --default "${defaults[@]}"

# Left
# source "$ITEM_DIR/apple.sh"
source "$ITEM_DIR/spaces.sh"
# source "$ITEM_DIR/front_app.sh"

# Right - Add items with separators in the correct order
# Remember: right side items are positioned right-to-left, so we need to add in reverse visual order

# Calendar (rightmost visually, so add first)
source "$ITEM_DIR/calendar.sh"

# Separator 1 (between calendar and system)
sketchybar --add item separator1 right \
    --set separator1 \
    padding_left=2 \
    padding_right=2 \
    background.drawing=off \
    icon.drawing=off

# System status items (middle group)
source "$ITEM_DIR/battery.sh"
source "$ITEM_DIR/wifi.sh"
source "$ITEM_DIR/dnd.sh"
source "$ITEM_DIR/volume.sh"

# Separator 2 (between system and performance)
sketchybar --add item separator2 right \
    --set separator2 \
    padding_left=2 \
    padding_right=2 \
    background.drawing=off \
    icon.drawing=off

# Performance items (leftmost visually, so add last)
source "$ITEM_DIR/ram.sh"
source "$ITEM_DIR/cpu.sh"

# Create brackets for visual grouping
sketchybar --add bracket calendar_box calendar \
    --set calendar_box background.color=$BOX_BACKGROUND \
    background.corner_radius=8 \
    background.drawing=on \
    background.height=29

sketchybar --add bracket system_box battery wifi dnd volume_icon \
    --set system_box background.color=$BOX_BACKGROUND \
    background.corner_radius=8 \
    background.drawing=on \
    background.height=29

sketchybar --add bracket performance_box ram cpu \
    --set performance_box background.color=$BOX_BACKGROUND \
    background.corner_radius=8 \
    background.drawing=on \
    background.height=29

# Forcing all item scripts to run (never do this outside of sketchybarrc)
sketchybar --update

echo "sketchybar configuation loaded.."
